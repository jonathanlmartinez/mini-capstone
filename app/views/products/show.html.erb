<div class="container">
  <div class="jumbotron">
    <h1> <%= @product.name  %> </h1>
    <h2> <%= @product.description  %> </h2>
    <h4> <%= @product.price  %> </h4>
    <div class="row">
        <div class="span4"></div>
        <div class="span4"><img src="<%= @product.image  %>" width="100" height="100"/></div>
        <div class="span4"></div>
    </div>

    <div> <%= form_tag "/products/#{@product_id}", method: "delete" do %>
      <input type="submit" class="btn btn-default" value="Delete">
      <% end %>
      <div>
        <a class="glyphicon glyphicon-pencil" href="/products/<%= @product.id%>/edit" role="button">Edit</a>
      </div>
    </div>
  </div>
</div>


