<%= form_tag "/products", method: "post" do %>

  <div class="form-group">
    <label for="form_name">Name</label>
    <input name="form_name" type="text" class="form-control" id="form_name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="form_description">Description</label>
    <input name="form_description" type="text" class="form-control" id="form_description" placeholder="Description">
  </div>
  <div class="form-group">
    <label for="form_description">Price</label>
    <input name="form_price" type="text" class="form-control" id="form_price" placeholder="Price">
  </div><div class="form-group">
    <label for="form_image">Image</label>
    <input name="form_image" type="text" class="form-control" id="form_image" placeholder="Image">
  </div>
  
  <button type="submit" class="btn btn-default">Submit</button>

<% end %>