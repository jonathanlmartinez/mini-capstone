
 <div class="container">
 <div class="jumbotron">
   <h1>All Products</h1>
  <p>...</p>
</div>

 <% @products.each do |product| %>
<div class="row">
  <div class="col-md-4">
    <div class="thumbnail">
      <a href= "products/<%= product.id %>">
        <img src="<%= product.image %>" alt="..." width="100" height="100"">
        <div class="caption">
          <h3 class="media-heading"><%= product.name %></h3>
          <h3> <%= product.description %> </h3>
          <h2> PRICE: $<%= product.price %></h2>
        </div>
      </a>
    </div>
  </div>
  <% end %> 
  </div>