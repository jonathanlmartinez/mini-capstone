
<div class="container">
  <div class="jumbotron">
   <h1>All Products</h1>
   <p></p>
 </div>

 <% @products.each do |product| %>

 <div class="media">
  <div class="media-left media-middle">
    <a href="/products/<%= product.id %>">
      <% if product.images.first %>
        <img class="media-object" src="<%= product.images.first.image_url %>" alt="Product Image" width="100" height="100">
      <% else %>
        <img class="media-object" src="http://www.epurvanchal.com/media/k2/items/cache/d3b3799d6611d677944f5f86a500beb3_XL.jpg" alt="Product Image" width="100" height="100">
      <% end %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"> <%= product.name %> </h4>
    <h5> <%= product.description %> </h5>
    <h6> PRICE: $<%= product.price %></h6>
    <div>
       <a type="button" class="btn btn-default" href="/products/<%= product.id %>" aria-label="Right Align">
       <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </a>
    </div>
</div>
</div>

<% end %> 
