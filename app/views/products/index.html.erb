
<div class="container">
  <div class="jumbotron">
   <h1>All Products</h1>
   <p></p>
 </div>

 <% @products.each do |product| %>

 <div class="media">
  <div class="media-left media-middle">
    <a href="/products/<%= product.id %>">
      <img class="media-object" src="<%= product.image %>" alt="Product Image" width="100" height="100">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"> <%= product.name %> </h4>
    <h5> <%= product.description %> </h5>
    <h6> PRICE: $<%= product.price %></h6>
    <div>
       <a type="button" class="btn btn-default" href="/products/<%= product.id %>" aria-label="Right Align">
       <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </div>
   </a>
</div>
</div>

<% end %> 
