
<%= form_tag "/users", method: "post" do %>
<div class="container">
<!-- jumbotron --> 
 <div class="jumbotron">
     <h1>Sign Up</h1>
  </div>
<!--   jumbotron ends -->

<!-- Form -->
<div class="form-group">
    <label for="form_abreviation">Text</label>
    <input name="name" type="text" class="form-control" id="form_name" placeholder="User">
  
    <label for="form_name"> Email </label>
    <input name="email" type="email" class="form-control" id="form_name" placeholder="Email">
    
    <label for="form_description">Password</label>
    <input name="password" type="text" class="form-control" id="form_description" placeholder="Password">

    <label for="form_description">Confirm Password</label>
    <input name="password_comfirm" type="text" class="form-control" id="form_description" placeholder="Description">


   
  <button type="submit" class="btn btn-default">Submit</button>
</div>
</div>
<% end %>
