

<%= form_tag "/login", method: "post" do %>
<div class="container">
  <!-- jumbotron --> 
  <div class="jumbotron">
       <h1>Log In</h1>
  </div>
  <!--   jumbotron ends -->

  <!-- Form -->
  <div class="form-group">
      <label for="form_abreviation">Email</label>
      <input name="email" type="text" class="form-control" id="form_name" placeholder="Email">
  </div>
  <div class="form-group">
      <label for="form_name">Password</label>
      <input name="password" type="password" class="form-control" id="form_password" placeholder="Password">
  </div>
  <div><button type="submit" class="btn btn-default">Login</button>
  </div>
</div>
<% end %>
<!-- form ends -->